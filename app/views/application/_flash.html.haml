:ruby
  flash = if flash.length > 0 then flash else params[:flash] end

#flash{class: (flash ? nil : "hidden")}
  - if flash
    - flash.each do |k,v|
      .paragraph-m.row.emboss.straight.text-align-center.padding-inset-xs{:class => k}
        %strong= v
        %a.no-colors.transparent-hover.position-absolute-topright.height-full.padding-horizontal-m{:"data-remove" => "true", :title => _('Hide notification')}
          .table
            .table-row
              .table-cell.vertical-align-middle
                %i.fa.fa-times-circle
#flash-spacer