.modal.medium.hide.fade.ui-modal.padding-vertical-m{:role => "dialog", :tabindex => "-1"}

  .row.padding-vertical-m.padding-horizontal-l

    .col1of2
      %h3.headline-l {{jed "Package"/}}

    .col1of2
      .float-right
        %a.modal-close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button", :title => '{{jed "close dialog"/}}', :class => "weak"}
          {{jed "Cancel"/}}
        %button#save-package.button.green{:type => :button}
          {{jed "Save Package"/}}

  #notifications.hidden

  .modal-body.row.padding-horizontal-l

    .margin-bottom-m
      %h2.headline-m.padding-bottom-m {{jed 'Items'/}}
      .row.emboss.margin-vertical-xxs.margin-right-xs
        .row.padding-inset-xs
          .col1of2.padding-vertical-xs
            %strong.font-size-m.inline-block {{jed 'Add item'/}}
          .col1of2
            .row
              %input#search-item.width-full.has-addon{:type => :text, :autocomplete => :off,:"data-barcode-scanner-target" => true}
              .addon.transparent
                %span.arrow.down
      #items.row

    %form#item-form.padding-top-s

      #flexible-fields
        .height-s
        %img.margin-horziontal-auto.margin-top-xxl.margin-bottom-xxl{:src => asset_path("loading.gif")}
        .height-s
