.row.line.font-size-xs.focus-hover-thin{:"data-type" => "inline-entry", :"data-new" => true}

  %input{:type => :hidden, :name => "category[links][{{>~uid}}][parent_id]", :value => "{{>id}}"}
  
  .line-col.col3of10.text-align-left
    {{>name}}

  .line-col.col1of10.text-align-center{:title => "{{jed 'Subordinate to %s' name/}}"}
    %i.fa.fa-sitemap

  .line-col.col3of10.text-align-left
    %input.small.width-full{:type => :text, :autocomplete => :off, :placeholder => "{{jed 'Label'/}}", :name => "category[links][{{>~uid}}][label]", :value => "{{>~label}}"}

  .line-col.col3of10.text-align-right
    %button.button.small.inset{:"data-remove" => true} 
      {{jed 'Remove'/}}