- content_for :title, _("Create %s") % (@delegation ? _("Delegation") : _("User"))
- content_for :manage_section, "active"

= form_tag admin.users_path, method: :post, class: 'form-horizontal' do

  .row
    .col-sm-6
      %h1= yield :title

    .col-sm-6.text-right
      = link_to _('Cancel'), :back, class: 'btn btn-default'
      %button.btn.btn-success{:type => :submit}= _("Save")

  .row

    - if @delegation_type

      = render partial: "delegation"

    - else

      .col-sm-6

        = render partial: "leihs_admin/users/personal_details"

      .col-sm-6

        = render partial: "leihs_admin/users/login_details"

        = render partial: "leihs_admin/users/admin_details"
