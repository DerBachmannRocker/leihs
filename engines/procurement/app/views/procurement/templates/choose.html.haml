%h4
  = _('Custom articles')
.panel-group(id="accordion")
  - @template_categories.each do |template_category|
    .panel.panel-info
      .panel-heading(role="button" data-toggle="collapse" data-parent="#accordion" href="#collapse_#{template_category.id}")
        = template_category
      .list-group(id="collapse_#{template_category.id}" class="panel-collapse collapse")
        - template_category.templates.each do |template|
          %a.list-group-item.show_template{href: group_budget_period_user_requests_path(template_category.group_id, params[:budget_period_id], @user), data: {template_id: template.id}}= template
